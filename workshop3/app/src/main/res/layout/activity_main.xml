<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.cafecode.android.workshop3.MainActivity">

    <!-- TODO: 02 - Delete hardcore layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Place 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/place_1_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/place_1_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="Courtyard New York Manhattan/Times Square"/>
                    <ImageView
                        android:id="@+id/place_1_rating_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_below="@id/place_1_name_text"
                        android:src="@drawable/ic_star_rate"/>
                    <TextView
                        android:id="@+id/place_1_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/place_1_rating_icon"
                        android:layout_below="@id/place_1_name_text"
                        android:textColor="#000000"
                        android:text="4.3"/>
                    <TextView
                        android:id="@+id/place_1_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/place_1_rating_icon"
                        android:textSize="12sp"
                        android:text="114 West 40th Street, New York"/>
                </RelativeLayout>
            </LinearLayout>
            <!-- Place 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/place_2_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/placeholder"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <TextView
                        android:id="@+id/place_2_name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:text="Courtyard New York Manhattan/Times Square"/>
                    <ImageView
                        android:id="@+id/place_2_rating_icon"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_below="@id/place_2_name_text"
                        android:src="@drawable/ic_star_rate"/>
                    <TextView
                        android:id="@+id/place_2_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/place_2_rating_icon"
                        android:layout_below="@id/place_2_name_text"
                        android:textColor="#000000"
                        android:text="4.3"/>
                    <TextView
                        android:id="@+id/place_2_address_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/place_2_rating_icon"
                        android:textSize="12sp"
                        android:text="114 West 40th Street, New York"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- TODO: 04 - Insert RecyclerView -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/place_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
